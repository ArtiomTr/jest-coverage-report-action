{
    "name": "jest-coverage-report-action",
    "private": true,
    "version": "1.0.0",
    "description": "",
    "main": "dist/index.js",
    "scripts": {
        "test": "jest",
        "test:log-coverage": "jest --coverage",
        "test:coverage": "jest --silent --testLocationInResults --ci --all --coverage --json --outputFile=\"report.json\"",
        "test:watch": "jest --watch",
        "build": "tsc --noEmit --incremental && node esbuild.cjs",
        "build:dev": "node esbuild.cjs",
        "lint": "eslint .",
        "format": "prettier --ignore-path .gitignore --write \"**/*.+(js|json|ts|tsx|yml)\""
    },
    "keywords": [],
    "author": "Artiom Tretjakovas <artiom.tretjakovas2@gmail.com>",
    "license": "MIT",
    "engines": {
        "node": ">=14.15.5",
        "npm": ">=7.0.0"
    },
    "dependencies": {
        "@actions/core": "^1.2.6",
        "@actions/exec": "^1.0.4",
        "@actions/github": "^4.0.0",
        "cfgn": "^0.1.3",
        "fs-extra": "^10.0.0",
        "markdown-table": "^2.0.0",
        "micromatch": "^4.0.4",
        "semver": "^7.3.5",
        "strip-ansi": "^6.0.0",
        "yup": "^0.32.9"
    },
    "devDependencies": {
        "@types/fs-extra": "^9.0.11",
        "@types/jest": "^27.0.2",
        "@types/markdown-table": "^2.0.0",
        "@types/micromatch": "^4.0.2",
        "@types/node": "^14.14.20",
        "@types/semver": "^7.3.9",
        "@typescript-eslint/eslint-plugin": "^4.12.0",
        "@typescript-eslint/parser": "^4.12.0",
        "esbuild": "^0.12.24",
        "eslint": "^7.17.0",
        "eslint-config-prettier": "^7.1.0",
        "eslint-plugin-prettier": "^3.3.1",
        "eslint-plugin-simple-import-sort": "^7.0.0",
        "jest": "^27.2.1",
        "prettier": "^2.2.1",
        "ts-jest": "^27.0.5",
        "typescript": "^4.1.3"
    }
}
